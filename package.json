{
  "name": "riz-bot",
  "version": "1.4.0",
  "description": "Rizowski's discord server bot",
  "main": "src/index.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "npm run build -- -w",
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo . --quiet",
    "local": "nodemon . | pino-pretty",
    "mocha": "NODE_ENV=${NODE_ENV:-test} mocha -r ts-node/register",
    "start": "node .",
    "test": "npm run mocha -- --opts ./test/mocha.opts",
    "unit:test": "npm run mocha -- --opts ./test/unit-mocha.opts"
  },
  "author": "Colten Rouska",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "xo": {
    "prettier": true,
    "plugins": [
      "unicorn"
    ],
    "overrides": [
      {
        "files": "test/**/*.js",
        "envs": [
          "mocha"
        ]
      },
      {
        "files": "src/**/*.ts",
        "extends": "xo-typescript",
        "extensions": [
          "ts"
        ],
        "rules": {
          "@typescript-eslint/indent": [
            "error",
            2,
            {
              "SwitchCase": 1
            }
          ]
        }
      }
    ]
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix -- --env mocha",
      "git add"
    ],
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/config": "^0.0.34",
    "@types/lodash.find": "^4.6.6",
    "@types/lodash.flatten": "^4.4.6",
    "@types/ms": "^0.7.30",
    "@types/pino": "^5.8.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.11.0",
    "chai": "^4.1.2",
    "eslint": "5",
    "eslint-config-xo-typescript": "^0.15.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.0.2",
    "mocha": "^6.1.4",
    "nodemon": "^1.18.11",
    "nyc": "^14.0.0",
    "pino-pretty": "^3.0.0",
    "prettier": "^1.18.2",
    "sinon": "^7.3.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.4.5",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "config": "^3.1.0",
    "debug": "^4.1.1",
    "discord.js": "^11.3.2",
    "lodash.camelcase": "^4.3.0",
    "lodash.defaultsdeep": "^4.6.0",
    "lodash.find": "^4.6.0",
    "lodash.flatten": "^4.4.0",
    "lodash.merge": "^4.6.1",
    "lodash.set": "^4.3.2",
    "moment": "^2.24.0",
    "ms": "^2.1.1",
    "pino": "^5.12.3",
    "rxjs": "^5.5.6"
  }
}
