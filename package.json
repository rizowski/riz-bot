{
  "name": "riz-bot",
  "version": "1.6.1",
  "description": "Rizowski's discord server bot",
  "main": "src/index.js",
  "workspaces": [
    "packages/*",
    "."
  ],
  "scripts": {
    "lint:fix": "npm run lint -- --fix",
    "lint": "xo . --quiet",
    "local": "nodemon . | pino-pretty",
    "mocha": "NODE_ENV=${NODE_ENV:-test} mocha -r ts-node/register",
    "start": "node ."
  },
  "author": "Colten Rouska",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "xo": {
    "prettier": true,
    "space": true,
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/no-reduce": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "unicorn/no-fn-reference-in-iterator": "off",
      "@typescript-eslint/no-empty-function": "off",
      "unicorn/prevent-abbreviations": "off",
      "import/no-anonymous-default-export": "off",
      "@typescript-eslint/no-var-requires": "off"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ],
    "*.{js,json,css,md,ts}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "eslint-config-xo-typescript": "^0.32.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "nodemon": "^2.0.4",
    "pino-pretty": "^4.2.1",
    "prettier": "^2.1.2",
    "xo": "^0.33.1"
  },
  "dependencies": {
    "@local/discord": "workspace:packages/discord",
    "@local/logger": "workspace:packages/logger",
    "config": "^3.3.1",
    "discord.js": "^11.3.2",
    "pino": "^6.6.1"
  }
}
